<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medius.Example.App">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="Background">#181818</Color>
      <Color x:Key="AltBackground">#585858</Color>
      <Color x:Key="Foreground">#7CAFC2</Color>

      <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
      </Style>
      
      <Style TargetType="ListView">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
        <Setter Property="SeparatorColor" Value="{StaticResource AltBackground}" />
      </Style>

      <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AltBackground}" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
      </Style>

      <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</Application>